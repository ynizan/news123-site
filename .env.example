# News123 Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# Site Configuration
# ===========================================
SITE_DOMAIN=news123.info
BASE_URL=https://news123.info

# ===========================================
# Testing
# ===========================================
# URL for running tests against (defaults to production)
TEST_URL=https://news123.info

# Set to "1" to skip live site tests
SKIP_LIVE_TESTS=0

# Set to "1" to skip pagefind search indexing (faster builds)
SKIP_PAGEFIND=0

# ===========================================
# Analytics
# ===========================================
# Plausible analytics domain
PLAUSIBLE_DOMAIN=news123.info

# ===========================================
# Cloudflare Worker (for feedback form)
# ===========================================
# GitHub token for creating issues from feedback
# GITHUB_TOKEN=your-github-personal-access-token

# ===========================================
# Notifications
# ===========================================
# Slack webhook for test failure notifications
# SLACK_WEB_HOOK=https://hooks.slack.com/services/xxx/yyy/zzz

# ===========================================
# Email (for Cloudflare Worker contact form)
# ===========================================
# SEND_TO_EMAIL=contact@news123.info
# MAILGUN_API_KEY=your-mailgun-api-key
# MAILGUN_DOMAIN=your-mailgun-domain
